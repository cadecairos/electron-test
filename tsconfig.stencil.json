{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "nodenext",
    "module": "esnext",
    "target": "es2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/app.ts",
    "src/preload.ts"
  ]
}
